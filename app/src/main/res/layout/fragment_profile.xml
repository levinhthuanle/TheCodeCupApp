<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/txtProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <include
            android:id="@+id/itemFullName"
            layout="@layout/item_profile_info" />

        <include
            android:id="@+id/itemPhone"
            layout="@layout/item_profile_info" />

        <include
            android:id="@+id/itemEmail"
            layout="@layout/item_profile_info" />

        <include
            android:id="@+id/itemAddress"
            layout="@layout/item_profile_info" />


        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/bg_segment_btn_blue"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>
